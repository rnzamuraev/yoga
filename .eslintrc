{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "max-len": ["error", { "code": 120, "tabWidth": 2 }],
    // "quotes": "off"
    // "indent": ["error", 2],
    "no-invalid-this": "off",
    "indent": "off",
    "linebreak-style": "off",
    "require-jsdoc": "off",
    "object-curly-spacing": "off",
    "operator-linebreak": "off",
    "space-before-function-paren": "off"
  },
  "extends": ["eslint:recommended", "google"]
}
